{
    "name": "FFmpeg Stream Downloader",
    "version": "1.1",
    "manifest_version": 3,
    "description": "Sniffs media streams and downloads them using local FFmpeg.",
    "permissions": [
        "nativeMessaging",
        "storage",
        "activeTab",
        "webRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "FFmpeg Stream Downloader"
    }
}